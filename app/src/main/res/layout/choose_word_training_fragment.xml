<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.eduardg.quizlec.training.chooseword.ChooseWordTrainingViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/remainingTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/keyline_5"
            android:gravity="center"
            tools:text="00:00"
            android:textColor="#000000"
            android:textAppearance="?attr/textAppearanceHeadline4"
            />

        <TextView
            android:id="@+id/questionTermText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            tools:text="TestText"
            android:gravity="center"
            android:textColor="#000000"
            android:textAppearance="?attr/textAppearanceHeadline4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:padding="8dp"
            android:orientation="vertical">

                <Button
                    android:id="@+id/first_answer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="1"
                    android:textSize="16sp"/>
            <Button
                android:id="@+id/second_answer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="2"
                android:textSize="16sp"/>

                <Button
                    android:id="@+id/third_answer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="3"
                    android:textSize="16sp" />


            <Button
                android:id="@+id/fourth_answer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="4"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</layout>