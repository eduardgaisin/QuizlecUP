    <data>
        <variable
            name="cardCollectionViewModel"
            type="com.eduardg.quizlec.cardcollection.CardCollectionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".cardcollection.CardCollectionFragment">

<!--        <ScrollView-->
